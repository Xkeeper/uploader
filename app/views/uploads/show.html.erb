<%- model_class = Upload -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:filename) %>:</strong></dt>
  <dd><%= @upload.filename %></dd>
  <dt><strong><%= model_class.human_attribute_name(:upload_date) %>:</strong></dt>
  <dd><%= @upload.upload_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:filesize) %>:</strong></dt>
  <dd><%= @upload.filesize %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              :back, :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              upload_path(@upload),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
