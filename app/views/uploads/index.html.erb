<%- model_class = Upload -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:filename) %></th>
      <th><%= model_class.human_attribute_name(:file_path) %></th>
      <th><%= model_class.human_attribute_name(:upload_date) %></th>
      <th><%= model_class.human_attribute_name(:filesize) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @uploads.each do |upload| %>
      <tr>
        <td><%= link_to upload.id, upload_path(upload) %></td>
        <td><%= link_to upload.filename, upload.file_url %></td>
        <td><%= upload.file_path %></td>
        <td><%= upload.upload_date %></td>
        <td><%= upload.filesize %></td>
        <td><%=l upload.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      upload_path(upload), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      upload_path(upload),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_upload_path,
            :class => 'btn btn-primary' %>
